<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="Steam" Height="768" Width="1024" 
        Background="#14181D">
    
    <Window.Resources>
        <!-- Button Style for Navigation -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#B8B6B4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DA8E18"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Nav Button Style -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#1A1620"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Game Card Style -->
        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A475E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DA8E18"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#14181D" Offset="0"/>
                    <GradientStop Color="#29151C" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Steam Logo -->
                <Border Grid.Row="0" Margin="15,20,15,30">
                    <Image Source="Images/steam-logo.png" Height="48" HorizontalAlignment="Left"/>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1">
                    <Button Style="{StaticResource ActiveNavButtonStyle}" Content="🏪  Game store"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="📚  Library"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="👥  Community"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="👤  Friends"/>
                </StackPanel>

                <!-- Bottom Settings -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Button Style="{StaticResource NavButtonStyle}" Content="⚙️  Settings"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="❓  Help"/>
                    <Border Background="#1A1620" Height="60" Margin="10" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Friend chat" FontSize="11" Foreground="#B8B6B4"/>
                            <TextBlock Text="and Groups" FontSize="11" Foreground="#B8B6B4"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" CornerRadius="12" Margin="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#14181D" Offset="0"/>
                    <GradientStop Color="#29151C" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="20,10" CornerRadius="12,12,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14181D" Offset="0"/>
                        <GradientStop Color="#1A1620" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Column="0" Background="#1A1620" CornerRadius="20" Padding="10,8" MaxWidth="400" HorizontalAlignment="Left" BorderBrush="#2A2A35" BorderThickness="1">
                        <TextBox Text="Search orders" Background="Transparent" Foreground="#B8B6B4" 
                                 BorderThickness="0" VerticalAlignment="Center"/>
                    </Border>

                    <!-- User Profile -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="🔔" FontSize="18" Foreground="White" Margin="15,0" VerticalAlignment="Center"/>
                        <Border Background="#1A1620" Width="1" Height="24" Margin="5,0"/>
                        <TextBlock Text="🛒" FontSize="18" Foreground="White" Margin="15,0" VerticalAlignment="Center"/>
                        <Border Background="#1A1620" Width="1" Height="24" Margin="5,0"/>
                        <Ellipse Width="32" Height="32" Fill="#E67E22" Margin="15,0,5,0"/>
                        <TextBlock Text="Jenny Wilson  ▼" FontSize="13" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Scroll Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="35,15,35,10">
                <StackPanel>
                    <!-- Hero Banner -->
                    <Border Background="#9B4444" CornerRadius="12" Margin="15,5,15,20" Height="320">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.6"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <!-- Banner Content -->
                            <Grid Grid.Column="0">
                                <Border CornerRadius="12,0,0,12" Margin="0,0,-30,0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="Images/stray.png" Stretch="UniformToFill" AlignmentX="Right"/>
                                    </Border.Background>
                                </Border>
                                
                                <!-- Genre Tags on Banner -->
                                <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0">
                                    <Border Background="#8B4513" CornerRadius="4" Margin="0,0,5,0">
                                        <TextBlock Text="Cats" Foreground="White" Padding="8,4" FontSize="11"/>
                                    </Border>
                                    <Border Background="#8B4513" CornerRadius="4" Margin="0,0,5,0">
                                        <TextBlock Text="Adventure" Foreground="White" Padding="8,4" FontSize="11"/>
                                    </Border>
                                    <Border Background="#8B4513" CornerRadius="4" Margin="0,0,5,0">
                                        <TextBlock Text="Cyberpunk" Foreground="White" Padding="8,4" FontSize="11"/>
                                    </Border>
                                    <Border Background="#8B4513" CornerRadius="4" Margin="0,0,5,0">
                                        <TextBlock Text="Atmospheric" Foreground="White" Padding="8,4" FontSize="11"/>
                                    </Border>
                                    <Border Background="#8B4513" CornerRadius="4">
                                        <TextBlock Text="+" Foreground="White" Padding="8,4" FontSize="11"/>
                                    </Border>
                                </WrapPanel>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                            VerticalAlignment="Bottom" Margin="20,0,0,20">
                                    <Ellipse Width="32" Height="32" Fill="Gray" Margin="0,0,5,0"/>
                                    <Ellipse Width="32" Height="32" Fill="Gray" Margin="0,0,5,0"/>
                                    <Ellipse Width="32" Height="32" Fill="Gray" Margin="0,0,5,0"/>
                                    <TextBlock Text="12 friends" FontSize="12" Foreground="White" 
                                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Game Info Panel -->
                            <Border Grid.Column="1" Margin="10" CornerRadius="12" Padding="15">
                                <Border.Background>
                                    <RadialGradientBrush Center="0.3,0.3" GradientOrigin="0.3,0.3">
                                        <GradientStop Color="#DA8E18" Offset="0"/>
                                        <GradientStop Color="#E50308" Offset="0.4"/>
                                        <GradientStop Color="#2D1B1D" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.OpacityMask>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="White" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.OpacityMask>
                                <Grid>
                                    <Grid.Background>
                                        <RadialGradientBrush Center="0.7,0.7" GradientOrigin="0.7,0.7" Opacity="0.5">
                                            <GradientStop Color="#DA8E18" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="0.6"/>
                                        </RadialGradientBrush>
                                    </Grid.Background>
                                <StackPanel>
                                    <TextBlock Text="Stray" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                    <TextBlock Text="Lost, alone and separated from family, a stray cat must untangle an ancient mystery to escape a long-forgotten cybercity and find their way home." 
                                               FontSize="12" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,15"/>
                                    <TextBlock Text="$16.99 USD" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                                    <Border Background="#5C7E10" CornerRadius="6">
                                        <Button Content="Available now" Background="Transparent" Foreground="White" 
                                                FontSize="14" FontWeight="Bold" Padding="15,10" BorderThickness="0" Cursor="Hand"/>
                                    </Border>
                                    <WrapPanel Margin="0,15,0,0">
                                        <Border CornerRadius="6" Margin="0,0,5,0" Width="80" Height="60">
                                            <Border.Background>
                                                <ImageBrush ImageSource="Images/stray-screen-1.png" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <Border CornerRadius="6" Margin="0,0,5,0" Width="80" Height="60">
                                            <Border.Background>
                                                <ImageBrush ImageSource="Images/stray-screen-2.png" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <Border CornerRadius="6" Width="80" Height="60">
                                            <Border.Background>
                                                <ImageBrush ImageSource="Images/stray-screen-3.png" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                    </WrapPanel>
                                </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Carousel Dots -->
                    <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Ellipse Width="8" Height="8" Fill="#5C7E10" Margin="2"/>
                        <Ellipse Width="8" Height="8" Fill="#4A4A4A" Margin="2"/>
                        <Ellipse Width="8" Height="8" Fill="#4A4A4A" Margin="2"/>
                        <Ellipse Width="8" Height="8" Fill="#4A4A4A" Margin="2"/>
                        <Ellipse Width="8" Height="8" Fill="#4A4A4A" Margin="2"/>
                        <Ellipse Width="8" Height="8" Fill="#4A4A4A" Margin="2"/>
                    </WrapPanel>

                    <!-- Special Offers Section -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Special offers" FontSize="20" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Learn more" FontSize="13" 
                                   Foreground="#66C0F4" VerticalAlignment="Center" Cursor="Hand"/>
                    </Grid>

                    <!-- Game Cards Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Hogwarts Legacy -->
                        <Border Grid.Column="0" Style="{StaticResource GameCardStyle}" Margin="0,0,10,0" Height="220">
                            <Border CornerRadius="8">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/hogwarts.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                        </Border>

                        <!-- Call of Duty -->
                        <Border Grid.Column="1" Style="{StaticResource GameCardStyle}" Margin="0,0,10,0" Height="220">
                            <Border CornerRadius="8">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/codmw.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                        </Border>

                        <!-- FIFA 23 -->
                        <Border Grid.Column="2" Style="{StaticResource GameCardStyle}" Margin="0,0,10,0" Height="220">
                            <Border CornerRadius="8">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/fifa.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                        </Border>

                        <!-- Mass Effect Andromeda -->
                        <Border Grid.Column="3" Style="{StaticResource GameCardStyle}" Height="220">
                            <Border CornerRadius="8">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/masseffect.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
