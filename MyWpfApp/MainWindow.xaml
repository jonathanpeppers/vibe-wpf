<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="Steam" Height="850" Width="1400" 
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1B2838" Offset="0"/>
            <GradientStop Color="#2A475E" Offset="0.5"/>
            <GradientStop Color="#1B2838" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#99000000"/>
            <Setter Property="Foreground" Value="#B8B8B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BB000000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#171A21"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F252E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Navigation -->
            <StackPanel Grid.Row="0">
                <Image Source="Images/steam-logo.png" Width="120" Height="48" Margin="20,20,20,30"/>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="#C75534" BorderThickness="0" Foreground="White" FontWeight="SemiBold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎮" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Game store" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#B8B6B4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📚" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Library" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#B8B6B4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Community" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#B8B6B4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👤" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Friends" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#B8B6B4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#B8B6B4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❓" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Help" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Border Background="#171A21" CornerRadius="8" Padding="12,10" Margin="10,10" Cursor="Hand">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="8" Height="8" CornerRadius="4" Background="#FF8833" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Friend chat" Foreground="White" FontSize="11"/>
                                <TextBlock Text="and Groups" Foreground="#FF9955" FontSize="10"/>
                            </StackPanel>
                            <TextBlock Text="+" Foreground="#B8B6B4" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Bar with Search and User -->
            <Grid Grid.Row="0" Background="Transparent" Height="60">
                <!-- Search Box (Center Left) -->
                <Border Background="#17212B" CornerRadius="3" Padding="12,8" Width="360" 
                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" FontSize="14" Foreground="#8F98A0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Search orders" Foreground="#8F98A0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    
                    <!-- Notification Bell -->
                    <Border Width="36" Height="36" Margin="0,0,0,0" Background="Transparent" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="🔔" FontSize="18" Foreground="#B8B6B4" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="8" Height="8" Fill="#D32F2F" 
                                   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Shopping Cart -->
                    <Border Width="36" Height="36" Margin="5,0,0,0" Background="Transparent" Cursor="Hand">
                        <TextBlock Text="🛒" FontSize="18" Foreground="#B8B6B4" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <Border Width="32" Height="32" CornerRadius="16" Margin="15,0,0,0" Cursor="Hand">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#F4A460" Offset="0"/>
                                <GradientStop Color="#CD853F" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Jenny Wilson" Foreground="White" VerticalAlignment="Center" Margin="10,0,5,0" FontSize="13"/>
                    <TextBlock Text="▼" Foreground="#B8B6B4" VerticalAlignment="Center" FontSize="10" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        
        <!-- Main Content Scroll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                     Background="Transparent" Padding="20,20,20,0">
            <StackPanel>
                <!-- Featured Game Section -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Main Featured Image -->
                    <Border Grid.Column="0" CornerRadius="12" Height="280" Margin="0,0,10,0">
                        <Border.Background>
                            <ImageBrush ImageSource="Images/stray.png" Stretch="UniformToFill"/>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="15" Opacity="0.5"/>
                        </Border.Effect>
                        
                        <Grid>
                            <!-- Category Tags -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" Margin="20,20,0,0">
                                <Button Content="Cats" Style="{StaticResource CategoryButtonStyle}"/>
                                <Button Content="Adventure" Style="{StaticResource CategoryButtonStyle}"/>
                                <Button Content="Cyberpunk" Style="{StaticResource CategoryButtonStyle}"/>
                                <Button Content="Atmospheric" Style="{StaticResource CategoryButtonStyle}"/>
                                <Button Content="+" Style="{StaticResource CategoryButtonStyle}"/>
                            </StackPanel>

                            <!-- Game Title -->
                            <Viewbox Width="400" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="STRAY" FontWeight="Bold" Foreground="White" 
                                         FontFamily="Impact">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>

                            <!-- Friend Avatars and Carousel -->
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                        <Border.Background>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#6495ED" Offset="0"/>
                                                <GradientStop Color="#4169E1" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                        <Border.Background>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#90EE90" Offset="0"/>
                                                <GradientStop Color="#32CD32" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                        <Border.Background>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#FFB6C1" Offset="0"/>
                                                <GradientStop Color="#FF69B4" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="12 friends" Foreground="White" VerticalAlignment="Center" Margin="10,0" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Carousel Indicators -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                    <Ellipse Width="8" Height="8" Fill="White" Margin="3"/>
                                    <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                    <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                    <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Game Info Card with Screenshots Below -->
                    <StackPanel Grid.Column="1">
                        <Border CornerRadius="12" Height="200" Padding="12" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#C19A3A" Offset="0"/>
                                <GradientStop Color="#8B6914" Offset="0.5"/>
                                <GradientStop Color="#5D4A1F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="15" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Stray" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                            <TextBlock Text="Lost, alone and separated from family, a stray cat must untangle an ancient mystery to escape a long-forgotten cybercity and find their way home." 
                                     TextWrapping="Wrap" Foreground="#E0E0E0" FontSize="10" Margin="0,0,0,8" LineHeight="14"/>
                            <TextBlock Text="$16.99 USD" FontSize="14" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Button Foreground="White" 
                                  BorderThickness="0" Padding="0" FontWeight="SemiBold" Cursor="Hand" 
                                  Height="34" HorizontalContentAlignment="Stretch">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#D4A645" Offset="0"/>
                                        <GradientStop Color="#A67B1E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <Grid Margin="12,0">
                                                <TextBlock Text="Available now" 
                                                         Foreground="{TemplateBinding Foreground}"
                                                         FontWeight="{TemplateBinding FontWeight}"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         FontSize="12"/>
                                                <TextBlock Text="⊞" 
                                                         Foreground="{TemplateBinding Foreground}"
                                                         FontSize="16"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Screenshot Thumbnails Below Info Card -->
                    <StackPanel Orientation="Horizontal">
                        <Border Width="110" Height="70" CornerRadius="4" Margin="0,0,8,0">
                            <Border.Background>
                                <ImageBrush ImageSource="Images/stray-screen-1.png" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>
                        <Border Width="110" Height="70" CornerRadius="4" Margin="0,0,8,0">
                            <Border.Background>
                                <ImageBrush ImageSource="Images/stray-screen-2.png" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>
                    </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Special Offers Section -->
                <Grid Margin="0,10,0,0">
                    <TextBlock Text="Special offers" FontSize="18" Foreground="White" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock Text="Learn more" FontSize="14" Foreground="#FF9955" 
                             HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="Hand"/>
                </Grid>

                <!-- Game Cards Grid -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Hogwarts Legacy - 2x wide -->
                    <Border Grid.Column="0" Style="{StaticResource GameCardStyle}" CornerRadius="8">
                        <Grid Height="320">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="270"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/hogwarts.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8F98A0" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.8"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#FFB366" FontSize="11" Margin="0,0,0,5"/>
                                <Grid>
                    <TextBlock Text="$59.99" Foreground="White" FontSize="13" FontWeight="Bold" 
                                             HorizontalAlignment="Left"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Call of Duty -->
                    <Border Grid.Column="1" Style="{StaticResource GameCardStyle}" CornerRadius="8">
                        <Grid Height="320">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="270"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/codmw.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <Border Background="#4C6B22" CornerRadius="2" Padding="5,2" 
                                          HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,8,0,0">
                                        <TextBlock Text="-50%" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8F98A0" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.8"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Special Offer" Foreground="#FF8833" FontSize="11" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="$29.99" Foreground="#8B9BB4" FontSize="12" TextDecorations="Strikethrough" 
                                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="$14.99" Foreground="#FFB366" FontSize="13" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- FIFA 23 -->
                    <Border Grid.Column="2" Style="{StaticResource GameCardStyle}" CornerRadius="8">
                        <Grid Height="320">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="270"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/fifa.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8F98A0" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.8"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#FFB366" FontSize="11" Margin="0,0,0,5"/>
                                <TextBlock Text="$69.99" Foreground="White" FontSize="13" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Mass Effect Andromeda -->
                    <Border Grid.Column="3" Style="{StaticResource GameCardStyle}" CornerRadius="8">
                        <Grid Height="320">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="270"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/masseffect.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8F98A0" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.8"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#FFB366" FontSize="11" Margin="0,0,0,5"/>
                                <TextBlock Text="$39.99" Foreground="White" FontSize="13" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </Grid>
</Window>
