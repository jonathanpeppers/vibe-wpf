<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="Steam" Height="850" Width="1400" 
        Background="#1B2838" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#67707B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8B929A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16202D"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E2D3F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0" Background="#171A21">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Navigation -->
            <StackPanel Grid.Row="0">
                <Image Source="Images/steam-logo.png" Width="120" Height="48" Margin="20,20,20,30"/>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="#3D5568" BorderThickness="0" Foreground="White" FontWeight="SemiBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎮" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Game store"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#8B9BB4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📚" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Library"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#8B9BB4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Community"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#8B9BB4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👤" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Friends"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#8B9BB4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>
                
                <Button Margin="10,5" Padding="15,8" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="#8B9BB4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❓" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Help"/>
                    </StackPanel>
                </Button>
                
                <Border Background="#1E2936" CornerRadius="4" Padding="12,10" Margin="10,10" Cursor="Hand">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="8" Height="8" CornerRadius="4" Background="#5C7E10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Friend chat" Foreground="White" FontSize="11"/>
                                <TextBlock Text="and Groups" Foreground="#66C0F4" FontSize="10"/>
                            </StackPanel>
                            <TextBlock Text="+" Foreground="#8B9BB4" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="#1B2838">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Bar with Search and User -->
            <Grid Grid.Row="0" Background="#1B2838" Height="60">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Border Background="#2A3F5F" CornerRadius="3" Padding="10,5" Width="280">
                        <TextBlock Text="🔍 Search orders" Foreground="#8B9BB4" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Notification Bell -->
                    <Border Width="36" Height="36" Margin="15,0,0,0" Background="Transparent" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="🔔" FontSize="18" Foreground="#8B9BB4" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="8" Height="8" Fill="#D32F2F" 
                                   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Shopping Cart -->
                    <Border Width="36" Height="36" Margin="5,0,0,0" Background="Transparent" Cursor="Hand">
                        <TextBlock Text="🛒" FontSize="18" Foreground="#8B9BB4" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <Border Width="32" Height="32" CornerRadius="16" Margin="15,0,0,0" Cursor="Hand">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#F4A460" Offset="0"/>
                                <GradientStop Color="#CD853F" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Jenny Wilson" Foreground="White" VerticalAlignment="Center" Margin="10,0,5,0" FontSize="13"/>
                    <TextBlock Text="▼" Foreground="#8B9BB4" VerticalAlignment="Center" FontSize="10" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        
        <!-- Main Content Scroll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                     Background="#1B2838" Padding="20,20,20,0">
            <StackPanel>
                <!-- Featured Game Section -->
                <Border Background="#2A475E" CornerRadius="4" Margin="0,0,0,15" Height="320">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="15" Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <!-- Main Featured Image -->
                        <Border CornerRadius="4">
                            <Border.Background>
                                <ImageBrush ImageSource="Images/stray.png" Stretch="UniformToFill"/>
                            </Border.Background>
                            
                            <Grid>
                                <!-- Category Tags -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" Margin="20,20,0,0">
                                    <Button Content="Cats" Style="{StaticResource CategoryButtonStyle}"/>
                                    <Button Content="Adventure" Style="{StaticResource CategoryButtonStyle}"/>
                                    <Button Content="Cyberpunk" Style="{StaticResource CategoryButtonStyle}"/>
                                    <Button Content="Atmospheric" Style="{StaticResource CategoryButtonStyle}"/>
                                    <Button Content="+" Style="{StaticResource CategoryButtonStyle}"/>
                                </StackPanel>

                                <!-- Game Title -->
                                <Viewbox Width="400" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="STRAY" FontWeight="Bold" Foreground="White" 
                                             FontFamily="Impact">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.8"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Viewbox>

                                <!-- Friend Avatars and Carousel -->
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                            <Border.Background>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#6495ED" Offset="0"/>
                                                    <GradientStop Color="#4169E1" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                            <Border.Background>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#90EE90" Offset="0"/>
                                                    <GradientStop Color="#32CD32" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <Border Width="32" Height="32" CornerRadius="16" Margin="2">
                                            <Border.Background>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#FFB6C1" Offset="0"/>
                                                    <GradientStop Color="#FF69B4" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Text="12 friends" Foreground="White" VerticalAlignment="Center" Margin="10,0" FontSize="13"/>
                                    </StackPanel>
                                    
                                    <!-- Carousel Indicators -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                        <Ellipse Width="8" Height="8" Fill="White" Margin="3"/>
                                        <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                        <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                        <Ellipse Width="8" Height="8" Fill="White" Margin="3" Opacity="0.4"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Game Info Card -->
                                <Border Background="#1B2838" CornerRadius="4" Width="220" Height="250"
                                      HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                                      Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Stray" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                        <TextBlock Text="Lost, alone and separated from family, a stray cat must untangle an ancient mystery to escape a long-forgotten cyberpunk city and find their way home." 
                                                 TextWrapping="Wrap" Foreground="#8B9BB4" FontSize="11" Margin="0,0,0,15"/>
                                        <TextBlock Text="$16.99 USD" FontSize="18" Foreground="#ACDBDF" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Button Background="#5C7E10" Foreground="White" 
                                              BorderThickness="0" Padding="12,10" FontWeight="Bold" Cursor="Hand" Height="36">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Available now" VerticalAlignment="Center"/>
                                                <TextBlock Text=" ⊞" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                        
                                        <!-- Thumbnail Images -->
                                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                            <Border Width="60" Height="35" Background="#6B4423" CornerRadius="2" Margin="2"/>
                                            <Border Width="60" Height="35" Background="#8B6914" CornerRadius="2" Margin="2"/>
                                            <Border Width="60" Height="35" Background="#CD853F" CornerRadius="2" Margin="2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Special Offers Section -->
                <Grid Margin="0,10,0,0">
                    <TextBlock Text="Special offers" FontSize="18" Foreground="White" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock Text="Learn more" FontSize="14" Foreground="#66C0F4" 
                             HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="Hand"/>
                </Grid>

                <!-- Game Cards Grid -->
                <UniformGrid Columns="4" Margin="0,10,0,0">
                    <!-- Hogwarts Legacy -->
                    <Border Style="{StaticResource GameCardStyle}">
                        <Grid Height="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="160"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/hogwarts.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8B9BB4" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.6"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#ACDBDF" FontSize="11" Margin="0,0,0,5"/>
                                <Grid>
                                    <TextBlock Text="$59.99" Foreground="White" FontSize="13" FontWeight="Bold" 
                                             HorizontalAlignment="Left"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Call of Duty -->
                    <Border Style="{StaticResource GameCardStyle}">
                        <Grid Height="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="130"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/codmw.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <Border Background="#4C6B22" CornerRadius="2" Padding="5,2" 
                                          HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,8,0,0">
                                        <TextBlock Text="-50%" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8B9BB4" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.6"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Special Offer" Foreground="#5C7E10" FontSize="11" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="$29.99" Foreground="#8B9BB4" FontSize="12" TextDecorations="Strikethrough" 
                                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="$14.99" Foreground="#ACDBDF" FontSize="13" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- FIFA 23 -->
                    <Border Style="{StaticResource GameCardStyle}">
                        <Grid Height="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="130"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/fifa.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8B9BB4" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.6"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#ACDBDF" FontSize="11" Margin="0,0,0,5"/>
                                <TextBlock Text="$69.99" Foreground="White" FontSize="13" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Mass Effect Andromeda -->
                    <Border Style="{StaticResource GameCardStyle}">
                        <Grid Height="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="130"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/masseffect.png" Stretch="UniformToFill"/>
                                </Border.Background>
                                <Grid>
                                    <TextBlock Text="♥" FontSize="18" Foreground="#8B9BB4" 
                                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                                             Opacity="0.6"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1" Margin="10,8">
                                <TextBlock Text="Available now" Foreground="#ACDBDF" FontSize="11" Margin="0,0,0,5"/>
                                <TextBlock Text="$39.99" Foreground="White" FontSize="13" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </Grid>
</Window>
